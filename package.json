  "scripts": {
    "dev": "npm run type-check && next dev",
    "build": "npm run type-check && next build",
    "start": "npm run type-check && next start",
    "clean": "npm run lint:fix && npm run format:write",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format:write": "prettier --write \"{app,lib,db,components,context,types}/**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"{app,lib,db,components,context,types}**/*.{ts,tsx}\" --cache",
    "analyze": "ANALYZE=true npm run build",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate && drizzle-kit migrate",
    "db:refresh": "dropdb ephemyral-api && createdb ephemyral-api && npm run db:migrate",
    "proxy": "tsx scripts/webhook-proxy/proxy.ts"
  },
